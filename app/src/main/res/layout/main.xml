<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.baernreuther.basketballcountdowntimer.MainActivity">

    <TextView
        android:id="@+id/gameTimeTextView"
        android:layout_width="36dp"
        android:layout_height="wrap_content"
        android:text="00:00"
        app:layout_constraintHorizontal_bias="0.451"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.095"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/attackTime" />

    <ToggleButton
        android:id="@+id/startGameButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="-50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.408" />

    <Button
        android:id="@+id/refreshAttackTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New 24s"
        tools:layout_editor_absoluteY="447dp"
        app:layout_constraintLeft_toRightOf="@+id/startGameButton"
        android:layout_marginLeft="26dp" />

    <EditText
        android:id="@+id/attackTime"
        android:layout_width="105dp"
        android:layout_height="44dp"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteX="104dp"
        android:layout_marginBottom="138dp"
        app:layout_constraintBottom_toTopOf="@+id/startGameButton"
        />

    <Button
        android:id="@+id/offensiveReboundButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New 14s"
        tools:layout_editor_absoluteY="445dp"
        app:layout_constraintRight_toLeftOf="@+id/startGameButton"
        android:layout_marginRight="8dp" />

    <CheckBox
        android:id="@+id/editFieldsCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Korrigieren"
        tools:layout_editor_absoluteX="106dp"
        tools:layout_editor_absoluteY="19dp" />

</android.support.constraint.ConstraintLayout>
